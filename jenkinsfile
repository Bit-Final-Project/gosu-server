pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh './gradlew build'
            }
        }
        stage('Docker Build') {
            steps {
                sh 'docker build --build-arg JAR_FILE=build/libs/testapiserver-0.0.1-SNAPSHOT.jar -t moeego-server .'
            }
        }
        stage('Deploy') {
            steps {
                sh 'docker stop moeego-server || true'
                sh 'docker rm moeego-server || true'
                sh 'docker run -d -p 8080:8080 --name moeego-server moeego-server'
            }
        }
    }
}
